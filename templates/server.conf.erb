# This file is managed by Puppet
# DO NOT MODIFY MANUALLY
#
# Configuration for <%= @vpn_name %>
server <%= @server_network %> <%= @server_netmask %>
port <%= @port %>
dev <%= @dev %>
proto <%= @proto %>
dh <%= @dh_params %>
ca <%= @ca %>
cert <%= @cert %>
key <%= @key %>
<% if @client_to_client -%>
client-to-client
<% end -%>
<% if @run_user -%>
user <%= @run_user %>
<% end -%>
<% if @run_group -%>
group <%= @run_group %>
<% end -%>
<% if @compression -%>
comp-lzo
<% end -%>
<% if @persist_key -%>
persist-key
<% end -%>
<% if @persist_tun -%>
persist-tun
<% end -%>
<% if @verbosity -%>
verb <%= @verbosity %>
<% end -%>
<% if @keepalive -%>
keepalive <%= @keepalive['interval'] %> <%= @keepalive['timeout'] %>
<% end -%>
<% if @status_log -%>
status <%= @status_log %>
<% end -%>
<% if @pool_persist -%>
ifconfig-pool-persist <%= @pool_persist %>
<% end -%>
<% if @ccd -%>
client-config-dir <%= @ccd %>
<% end -%>
<% if @routes -%>
  <% @routes.each do |route| -%>
push "route <%= route['network'] %> <%= route['netmask'] %>"
  <% end %>
<% end %>
